@import '../helpers/variables.styl'

*
  box-sizing border-box
  text-decoration none
  &:focus
    outline 0

*:hover
  text-decoration none

*:focus
  outline 0

a
  color inherit
  text-decoration none

.link
  margin-bottom .5em
  a
    color $primary
    cursor pointer
    font-size 1.6rem
    margin-right .4rem
    position relative
    text-decoration none
    transition all .3s ease
    &:after
      background-color rgba($primary, .3)
      bottom 0
      content ''
      height 1px
      right 0
      position absolute
      transition width .4s $bezier
      width 0
    &:hover
      &:after
        left 0
        width 100%
  .svg
    transform translateY(1px)
  &:hover
    color $primary - 10%

html
  font-size 62.5%
  margin 0
  max-width 100%
  padding 0
  width 100%

body
  color $main
  background #fff
  font-family $font
  font-weight 400
  font-size 1.6em
  line-height 1
  margin 0
  max-width 100%
  padding 0
  text-size-adjust 100%
  text-rendering optimizeLegibility
  -moz-osx-font-smoothing: grayscale;
  -webkit-font-smoothing antialiased
  width 100%
  *
    box-sizing border-box
    

.svg
  opacity 0

.replaced-svg
  opacity 1

img
  display block
  max-width 100%

hr
  background-color transparent
  border none
  border-top $border
  margin 0
  margin-bottom 2rem

